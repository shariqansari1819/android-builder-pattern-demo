<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_height="300dp">
    <TextView
        android:id="@+id/tv_content"
        tools:text="Hi! Welcome to the Sample of Builder Pattern !"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@id/v_divider"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="@id/tv_left_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#ececec"/>

    <TextView
        tools:text="확인"
        android:gravity="center"
        android:background="#ccffff"
        app:layout_constraintTop_toBottomOf="@id/v_divider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_left_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/tv_right_btn"
        android:layout_width="0dp"
        android:layout_height="40dp" />

    <TextView
        tools:text="취소"
        android:gravity="center"
        android:background="#ffdddd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_right_btn"
        app:layout_constraintTop_toTopOf="@id/tv_right_btn"
        app:layout_constraintBottom_toBottomOf="@id/tv_right_btn"
        android:id="@+id/tv_left_btn"
        android:layout_width="0dp"
        android:layout_height="40dp" />
</androidx.constraintlayout.widget.ConstraintLayout>